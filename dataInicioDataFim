<h1>Abre o console e veja a magia</h1>

<script>
var data = new Date();

var dia = data.getDate();

var mes = data.getMonth();

var ano = data.getFullYear();

window.dataInicio = 'Data de hoje:   ' + dia + '/' + (mes+'1') + '/' + ano;

window.dataFim = 'Data de amanha: ' + (dia+1) + '/' + (mes+'1') + '/' + ano;

console.log(dataInicio);
console.log(dataFim);
    
    
    
</script>    
